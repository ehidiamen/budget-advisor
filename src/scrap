 {/* âœ… Display Expenses Safely */}
              {Array.isArray(generated.expenses) && generated.expenses.length > 0 ? (
                <>
                  <h3 className="text-lg mt-2">ğŸ’¸ Expenses:</h3>
                  <ul className="list-disc pl-5">
                    {generated.expenses.map((item, index) => (
                      <li key={index} className="mt-1">
                        <span className="font-semibold">{item.category}</span>: ${item.amount}
                      </li>
                    ))}
                  </ul>
                </>
              ) : (
                <p className="text-gray-500">No expenses listed.</p>
              )}

              {/* âœ… Display Recommended Savings */}
              {generated.savings !== undefined && (
                <p className="font-semibold mt-3">ğŸ’¾ Recommended Savings: ${generated.savings}</p>
              )}

              {/* âœ… Display Financial Concerns */}
              {generated.concerns && (
                <p className="mt-3"><span className="font-semibold">ğŸ” Financial Concerns:</span> {generated.concerns}</p>
              )}

              {/* âœ… Display AI Advice */}
              {generated.advice && (
                <p className="mt-3"><span className="font-semibold">ğŸ’¡ AI Advice:</span> {generated.advice}</p>
              )}

              {/* âœ… Download Button for Excel */}
              {excelUrl && (
                <a href={`http://localhost:8000${excelUrl}`} download className="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded-md">
                  ğŸ“¥ Download Excel
                </a>
              )}